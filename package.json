{
	"name": "storybook-addon-grid",
	"version": "0.0.1",
	"description": "Column guides for your stories",
	"keywords": [
		"storybook",
		"columns",
		"grids",
		"guides"
	],
	"repository": "maraisr/storybook-addon-grid",
	"license": "MIT",
	"author": {
		"name": "Marais Rossouw",
		"email": "me@marais.dev",
		"url": "https://marais.io"
	},
	"sideEffects": false,
	"exports": {
		"./preset": {
			"import": "./dist/preset.mjs",
			"require": "./dist/preset.js"
		},
		"./package.json": "./package.json"
	},
	"main": "dist/preset.js",
	"module": "dist/preset.mjs",
	"types": "types/index.d.ts",
	"files": [
		"dist",
		"preset.js",
		"preset.mjs"
	],
	"scripts": {
		"build": "node bin",
		"format": "prettier  --write --list-different \"{*,src/**/*,.github/**/*}.+(ts|js|json|yml|md)\"",
		"prepublishOnly": "yarn build",
		"typecheck": "tsc --noEmit"
	},
	"prettier": {
		"bracketSpacing": true,
		"printWidth": 80,
		"proseWrap": "always",
		"singleQuote": true,
		"tabWidth": 4,
		"trailingComma": "all",
		"useTabs": true,
		"overrides": [
			{
				"files": [
					"*.md"
				],
				"options": {
					"tabWidth": 2,
					"useTabs": false
				}
			}
		]
	},
	"devDependencies": {
		"@marais/tsconfig": "0.0.1",
		"esbuild": "0.9.2",
		"cross-env": "^7.0.3",
		"prettier": "2.2.1",
		"typescript": "4.1.3"
	},
	"volta": {
		"node": "15.5.0",
		"yarn": "1.22.5"
	}
}
